/**
 * 高齡友善字體優化樣式
 * 針對雙語版名片進行字體可讀性優化
 */

/* 語言切換按鈕優化 */
.language-switch {
  top: 15px;
  right: 15px;
}

.lang-btn {
  font-size: 1.2rem;
  padding: 10px 16px;
  border-radius: 22px;
  display: flex;
  align-items: center;
  gap: 6px;
  min-width: 70px;
  min-height: 40px;
  justify-content: center;
}

/* 中文版字體設定 */
html[lang="zh-TW"] .name {
  font-size: 2.4em;
  letter-spacing: 0.02em;
}

html[lang="zh-TW"] .title {
  font-size: 1.4em;
  letter-spacing: 0.01em;
}

html[lang="zh-TW"] .department {
  font-size: 1.25em;
}

/* 英文版字體設定 */
html[lang="en"] .name {
  font-size: 2.4em;
  letter-spacing: -0.01em;
  line-height: 1.1;
}

html[lang="en"] .title {
  font-size: 1.4em;
  letter-spacing: 0;
  line-height: 1.2;
}

html[lang="en"] .department {
  font-size: 1.25em;
  letter-spacing: 0;
  line-height: 1.3;
}

html[lang="en"] .contact-item {
  letter-spacing: 0;
  line-height: 1.5;
}

/* 個人版特別設定 */
.card-personal html[lang="zh-TW"] .name {
  font-size: 2.8em;
}

.card-personal html[lang="en"] .name {
  font-size: 2.6em;
}

/* 確保最小字體大小 */
.contact-text, .social-info-content, .qr-label {
  font-size: max(1rem, 16px);
}

/* 高對比度設定 */
.contact-link, .social-link {
  color: #4e4e81;
  text-decoration: underline;
  font-weight: 500;
}

/* 響應式字體大小 */
@media (max-width: 480px) {
  html[lang="zh-TW"] .name,
  html[lang="en"] .name {
    font-size: 2.2em;
  }
  
  html[lang="zh-TW"] .title,
  html[lang="en"] .title {
    font-size: 1.3em;
  }
  
  .lang-btn {
    font-size: 1rem;
    padding: 8px 12px;
  }
  
  .contact-text, .social-info-content, .qr-label {
    font-size: max(0.95rem, 15px);
  }
}

/* 高齡友善焦點效果 */
.contact-link:focus, .social-link:focus, .download-btn:focus, .lang-btn:focus {
  outline: 3px solid #6868ac;
  outline-offset: 2px;
}

/* 增強按鈕可見性 */
.download-btn {
  font-size: 1.1em;
  padding: 15px 30px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(104,104,172,0.3);
}

/* 增強問候語可讀性 */
.greeting {
  font-size: 1.4em;
  line-height: 1.5;
  min-height: 70px;
}

/* 增強 QR 碼標籤可讀性 */
.qr-label {
  font-size: 1.15em;
  line-height: 1.6;
  margin: 15px auto 5px;
  font-weight: 500;
}